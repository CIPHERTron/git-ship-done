datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id          String      @id
  title       String
  description String
  gh_issue_id Int?
  createdAt   DateTime @default(now())
}

model ReplicacheClient {
  id              String @id @default(uuid())
  lastMutationID  Int
}


